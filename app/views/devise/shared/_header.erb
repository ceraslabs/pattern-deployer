<div id="header">
<div class="container">
  <h1 id="logo"><%= link_to "Pattern-Base Application Deployer", root_path %></h1>
  <ul id="nav">
    <% if user_signed_in? %>
      <li><%= link_to "Get Started", "https://github.com/ceraslabs/pattern-deployer/wiki/Getting-Started", :class => "active" %></li>
      <li><%= link_to "API Doc", doc_index_path %></li>
      <% if current_user.admin? %>
        <li><%= link_to "Admin Panel", rails_admin_path %></li>
      <% end %>
      <li>
        <%= link_to current_user.email, home_index_path %>
        <ul>
          <li><%= link_to "Sign Out", destroy_user_session_path %></li>
          <li><%= link_to "Your Account", home_index_path %></li>
        </ul>
      </li>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %></li>
      <li><%= link_to "Sign Up", new_user_registration_path %></li>
    <% end %>
  </ul>
</div>
</div>
